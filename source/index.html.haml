- content_for :head do
  %title The Middleman!

%h1 The Middleman is watching.

- data.blog.articles[0...5].each_with_index do |article, i|
  .article{:class => (i == 0) ? 'first' : '' }
    %h2
      = link_to article.title, article.url
      %span= article.date.strftime('%b %e %Y')

    = article.summary
